from typing import TYPE_CHECKING

from sqlalchemy import (
    Boolean,
    Column,
    Float,
    Integer,
    String,
    ForeignKey,
    DateTime,
    Enum,
)
from sqlalchemy.orm import relationship
from sqlalchemy.dialects.postgresql import JSONB

from app.db.base_class import Base
from app.schemas import MediaType

if TYPE_CHECKING:
    from .item import Item  # noqa: F401


class MediaLabel(Base):
    id = Column(Integer, primary_key=True, index=True)
    media_id = Column(Integer, ForeignKey("media.id"), index=True) # 1 media can have many labels 
    created_at = Column(DateTime) #creation date of the label
    begin_time = Column(Float, index=True) #begin time of the label on the sound sequence
    end_time = Column(Float, index=True) #end time of the label on the sound sequence
    low_freq = Column(Float, index=True) #low frequency of the label
    high_freq = Column(Float, index=True) #high frequency of the label
    label = Column(String, index=True) 
    label_type = Column(String, index=True) #if label has been created by a human or an AI 
    label_confidence = Column(Float, index=True) #how confident between 0 and 1 the label is 
